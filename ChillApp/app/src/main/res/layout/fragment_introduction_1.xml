<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.etienne.chillapp.fragments.Introduction_1"
    android:orientation="vertical"
    android:weightSum="1">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/intro_textview_id_header"
        android:id="@+id/intro_textview_header"
        android:layout_gravity="top|center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/intro_textview_id_intro_one"
        android:id="@+id/intro_textview_intro1"
        android:layout_gravity="center"
        android:layout_weight="0.98"
        android:gravity="top|bottom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/intro_textview_id_footer"
        android:id="@+id/intro_textview_footer"
        android:layout_gravity="center_horizontal|bottom" />

</LinearLayout>
